# ============================================
# InvMe Backend - Development Environment
# ============================================

# Aplicaci√≥n
ENVIRONMENT=development
SERVICE=bot  # bot | api

# Base de Datos
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/invme

# Redis
REDIS_URL=redis://localhost:6379/0

# Twitter/X API
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_BOT_USERNAME=invme_bot

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# LangChain / LangGraph (Opcional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=  # Opcional, solo para debugging
LANGCHAIN_PROJECT=invme-bot

# Seguridad
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# CORS (para API)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=DEBUG
